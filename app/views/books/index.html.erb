<%= render 'books/list', book: @book,user: current_user %>
<div class="container">
<div class="row">
	<div class="col-lg-8">
<h2>Books</h2>

<table class="table">
	<thead>
		<tr>
			<th></th>
			<th>title</th>
			<th>Opinion</th>
		</tr>
	</thead>
		<% @books.each do|book| %>
	<tbody>
			<tr>
				<th><%= link_to (book.user) do %>
				<%= attachment_image_tag book.user,:profile_image,:fill, 70, 70, fallback: "no_image.jpg"%></th>
				<% end %>
				<td><%= link_to book.title, book_path(book.id) %></td>
				<td><%= book.body %></td>
			</tr>
	</tbody>
		<% end %>
	</thead>
</table>
</div> 
</div>
</div>
